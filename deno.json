{
  "version": "2.0.1",
  "name": "oak_nest",
  "tasks": {
    "dev": "deno run --unstable --allow-net --allow-read --allow-write --allow-env --check --watch example/main.ts",
    "dev:hono": "deno task --cwd=modules/hono dev",
    "dev:scheduler": "deno run --allow-net --allow-env  --unstable modules/scheduler/example/main.ts",
    "dev:cache": "deno task --cwd=modules/cache dev",
    "dev:cors": "deno task --cwd=modules/cors dev",
    "dev:es": "deno task --cwd=modules/elasticsearch dev",
    "dev:mysql": "deno task --cwd=modules/mysql dev",
    "dev:postgres": "deno task --cwd=modules/postgres dev",
    "dev:redis": "deno run --allow-net --allow-env  --unstable modules/redis/example/main.ts",
    "pm2": "pm2 start --name oak_nest example/main.ts --interpreter='deno' --interpreter-args='run --allow-net --allow-env --allow-write --allow-read --unstable'",
    "test": "deno test --allow-env --parallel --ignore=example --coverage=cov_profile",
    "cache": "deno cache --lock deno.lock --unstable --lock-write deps.ts",
    "coverage": "deno coverage --unstable --lcov ./cov_profile",
    "coverage:html": "deno task test && deno task coverage > cov.lcov && genhtml -o cov_profile/html cov.lcov",
    "log": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "compilerOptions": {
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "importMap": "./.vscode/import_map.json"
}
